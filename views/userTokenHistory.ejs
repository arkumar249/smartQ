<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>
    Token History
  </title>
  <link rel="stylesheet" href="/styles/dashboard.css"> <!-- optional -->
  <style>
  :root {
  --primary: #2563eb;
  --primary-dark: #1746a0;
  --secondary: #f0f8ff;
  --accent: #3498db;
  --danger: #e74c3c;
  --danger-dark: #c0392b;
  --sidebar-bg: #2563eb;
  --sidebar-text: #fff;
  --card-bg: #fff;
  --card-radius: 16px;
  --shadow: 0 4px 16px rgba(37,99,235,0.08);
}

body {
  font-family: 'Segoe UI', Arial, sans-serif;
  margin: 0;
  background: var(--secondary);
  min-height: 100vh;
  display: block;
}

.sidebar {
  width: 30vw;
  background-color: var(--sidebar-bg);
  color: var(--sidebar-text);
  height: 100vh;
  padding: 18px 10px 10px 18px;
  position: fixed;
  left: -100%;
  top: 0;
  font-size: 1.1rem;
  border-top-right-radius: var(--card-radius);
  border-bottom-right-radius: var(--card-radius);
  box-shadow: var(--shadow);
  transition: left 0.4s cubic-bezier(.4,2.08,.55,.44);
  z-index: 200;
}

.sidebar h2 {
  margin-bottom: 18px;
  font-size: 1.1rem;
  font-weight: bold;
  color: #fff;
}

.sidebar a {
  color: #fff;
  display: block;
  margin-bottom: 18px;
  text-decoration: none;
  font-weight: 500;
  border-radius: 8px;
  padding: 8px 10px;
  transition: background 0.2s;
}

.sidebar a:hover {
  background: rgba(255,255,255,0.10);
}

.sidebar-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 50px;
  margin-bottom: 18px;
}

#cancelSidebar-button img {
  height: 28px;
  cursor: pointer;
  filter: invert(1);
  opacity: 0.8;
  transition: opacity 0.2s;
}
#cancelSidebar-button img:hover {
  opacity: 1;
}

.main-content {
  padding: 14px 3vw 14px 3vw;
  margin-left: 0;
  min-width: 0;
  background: var(--secondary);
}

.nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 1.2rem;
  width: 100%;
}

#ham {
  display: inline-block;
  cursor: pointer;
  background: #fff;
  border-radius: 10px;
  box-shadow: var(--shadow);
  padding: 3px;
  transition: box-shadow 0.2s;
}

.app {
  display: flex;
  align-items: center;
  gap: 14px;
  padding-right: 0;
}

.app h3 {
  color: var(--primary);
  font-size: 1rem;
  font-weight: bold;
  margin: 0;
  letter-spacing: -1px;
}

.app a img {
  height: 26px;
  filter: brightness(0.9) saturate(1.2);
}

.main-content h1 {
  font-size: 1.2rem;
  color: var(--primary);
  font-weight: bold;
  margin-bottom: 0.7rem;
}

.no-token {
  color: #888;
  font-style: italic;
  margin-top: 1.2rem;
  background: #fff;
  padding: 1.2rem 1rem;
  border-radius: var(--card-radius);
  box-shadow: var(--shadow);
  text-align: center;
}

.table-wrapper {
  width: 100%;
  background: #fff;
  border-radius: var(--card-radius);
  box-shadow: var(--shadow);
  margin-top: 1.2rem;
  overflow-x: auto;
  padding: 1rem 0.2rem;
}

table {
  font-size: 1rem;
  width: 100%;
  border-collapse: collapse;
  margin: 0;
  background: #fff;
  border-radius: var(--card-radius);
  overflow: hidden;
  min-width: 400px;
}

th, td {
  padding: 10px 8px;
  border: 1px solid #dbeafe;
  text-align: left;
  word-break: break-word;
}

th {
  background-color: var(--primary);
  color: white;
  font-weight: 600;
  font-size: 1rem;
  border: none;
}

tr {
  background: #f7fbff;
}

.active {
  background-color: #e2f6a6 !important;
}
.complete {
  background-color: rgba(162, 251, 162, 0.705) !important;
}
.cancel, .cancelled {
  background-color: rgba(255, 119, 119, 0.685) !important;
}

td.active, td.complete, td.cancel, td.cancelled {
  font-weight: bold;
  color: #222;
}

::-webkit-scrollbar {
  height: 8px;
  background: #e0e7ef;
  border-radius: 8px;
}
::-webkit-scrollbar-thumb {
  background: #b5d0f7;
  border-radius: 8px;
}

</style>

</head>

<body>
  <div class="sidebar">
    <div class="sidebar-header">
      <h2>User Dashboard</h2>
      <div id="cancelSidebar-button">
        <img src="/images/close.svg" style="height: 45px; cursor: pointer;" alt="close">


      </div>
    </div>

    <a href="/user">Dashboard</a>
    <a href="/auth/logout">Logout</a>
    <a href="/user/token-history">Token History</a>
  </div>


  <div class="main-content">
    <div class="nav">
      <div id="ham">
        <svg width="30" height="30" viewBox="0 0 100 80" fill="#2c3e50" xmlns="http://www.w3.org/2000/svg">
          <rect width="100" height="10" rx="6"></rect>
          <rect y="30" width="100" height="10" rx="6"></rect>
          <rect y="60" width="100" height="10" rx="6"></rect>
        </svg>
      </div>
      <div class="app">
        <h3>Smart Queue Management</h3>
        <a href="/user" ><img src="/images/home.svg" style="height: 45px;" alt="home"></a>
      </div>
    </div>
    <h1>Welcome, <%= user.name %>!</h1>
    <h1>Token History</h1>

<% if (user.tokensRequested.length === 0) { %>
  <p class="no-token">You have no tokens yet.</p>
<% } else { %>
    <div class="table-wrapper">
        <table>
          <thead>
            <tr>
              <th>Token Number</th>
              <th>Status</th>
              <th>Store</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            <% user.tokensRequested.forEach(token => { %>
              <tr  class=" <%= token.status %> ">
                <td><%= token.tokenNumber %></td>
                <td class=" <%= token.status %> "><%= token.status %></td>
                <td><%= token.store ? token.store.name : 'N/A' %></td>
                <td><%= new Date(token.createdAt).toLocaleString() %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>

    </div>
<% } %>


  <script>
      const sidebar = document.querySelector(".sidebar");
      console.log("dom loaded");
    document.getElementById("ham").addEventListener("click", () => {
      console.log("hamburger button clicked");
      sidebar.style.left = 0;

    })
    document.getElementById("cancelSidebar-button").addEventListener("click", () => {
      sidebar.style.left = "-100%";
    })
  </script>
  

</body>

</html>

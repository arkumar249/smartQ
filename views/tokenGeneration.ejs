<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Generate Token</title>
  <link rel="stylesheet" href="/styles/main.css" />
  <style>
    :root {
  --primary: #2563eb;
  --primary-dark: #1746a0;
  --secondary: #f0f8ff;
  --accent: #3498db;
  --danger: #e74c3c;
  --danger-dark: #c0392b;
  --sidebar-bg: #2563eb;
  --sidebar-text: #fff;
  --card-bg: #fff;
  --card-radius: 16px;
  --shadow: 0 4px 16px rgba(37,99,235,0.08);
}

body {
  font-family: 'Segoe UI', Arial, sans-serif;
  margin: 0;
  background: var(--secondary);
  min-height: 100vh;
  display: block;
  padding: 0;
}

.sidebar {
  width: 30vw;
  background-color: var(--sidebar-bg);
  color: var(--sidebar-text);
  height: 100vh;
  padding: 18px 10px 10px 18px;
  position: fixed;
  left: -100%;
  top: 0;
  font-size: 1.1rem;
  border-top-right-radius: var(--card-radius);
  border-bottom-right-radius: var(--card-radius);
  box-shadow: var(--shadow);
  transition: left 0.4s cubic-bezier(.4,2.08,.55,.44);
  z-index: 200;
}

.sidebar h2 {
  margin-bottom: 18px;
  font-size: 1.1rem;
  font-weight: bold;
  color: #fff;
}

.sidebar a {
  color: #fff;
  display: block;
  margin-bottom: 18px;
  text-decoration: none;
  font-weight: 500;
  border-radius: 8px;
  padding: 8px 10px;
  transition: background 0.2s;
}

.sidebar a:hover {
  background: rgba(255,255,255,0.10);
}

.sidebar-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 50px;
  margin-bottom: 18px;
}

#cancelSidebar-button img {
  height: 28px;
  cursor: pointer;
  filter: invert(1);
  opacity: 0.8;
  transition: opacity 0.2s;
}
#cancelSidebar-button img:hover {
  opacity: 1;
}

.main-content {
  padding: 14px 3vw 14px 3vw;
  margin-left: 0;
  min-width: 0;
  background: var(--secondary);
}
.nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 1.2rem;
  width: 100%;
}

#ham {
  display: inline-block;
  cursor: pointer;
  background: #fff;
  border-radius: 10px;
  box-shadow: 0 4px 16px rgba(37,99,235,0.08);
  padding: 3px;
  transition: box-shadow 0.2s;
}

.app {
  display: flex;
  align-items: center;
  gap: 14px;
  padding-right: 0;
}

.app h3 {
  color: #2563eb;
  font-size: 1rem;
  font-weight: bold;
  margin: 0;
  letter-spacing: -1px;
}

.app a img {
  height: 26px;
  filter: brightness(0.9) saturate(1.2);
}
#ham:hover {
  box-shadow: 0 2px 8px rgba(37,99,235,0.15);
}

.main-content h1 {
  font-size: 1.2rem;
  color: var(--primary);
  font-weight: bold;
  margin-bottom: 1.2rem;
}

.qr-section {
  margin-top: 1.2rem;
  padding: 1rem;
  border-radius: var(--card-radius);
  background: var(--card-bg);
  box-shadow: var(--shadow);
  margin-bottom: 1.2rem;
  border-top: 3px solid #dbeafe;
}

.qr-section h2 {
  color: var(--primary);
  font-size: 1.05rem;
  margin-top: 0;
}

.qr-section p {
  color: #555;
  font-size: 0.97rem;
}

.search-bar {
  margin-bottom: 1rem;
  background: var(--card-bg);
  border-radius: var(--card-radius);
  box-shadow: var(--shadow);
  padding: 1rem;
}

.search-bar h2 {
  color: var(--primary);
  font-size: 1.05rem;
  margin-top: 0;
}

#searchInput {
  width: 100%;
  padding: 0.7rem;
  border: 1.5px solid #dbeafe;
  border-radius: 8px;
  font-size: 1rem;
  margin-top: 0.5rem;
  margin-bottom: 0.5rem;
}

.store-list {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  margin-bottom: 1.5rem;
}

.store-card {
  border: 1.5px solid #dbeafe;
  border-radius: var(--card-radius);
  padding: 1rem;
  background-color: #f7fbff;
  box-shadow: var(--shadow);
}

.store-card h3 {
  margin-top: 0;
  color: var(--primary);
  font-size: 1.08rem;
}

.store-card p {
  margin: 0.2rem 0;
  color: #333;
  font-size: 0.97rem;
}

.btn, .btn-primary, .btn-danger {
  padding: 10px 0;
  background-color: var(--primary);
  color: #fff;
  border: none;
  border-radius: 8px;
  font-size: 1rem;
  font-weight: bold;
  cursor: pointer;
  transition: background 0.2s, opacity 0.2s;
  box-shadow: 0 2px 8px rgba(37,99,235,0.08);
  margin-top: 8px;
  display: block;
  width: 100%;
}

.btn-primary {
  background-color: var(--primary);
}
.btn-danger {
  background-color: var(--danger);
}
.btn:hover, .btn-primary:hover {
  background: var(--primary-dark);
  opacity: 0.95;
}
.btn-danger:hover {
  background: var(--danger-dark);
}

#scanner-container {
  display: none;
  position: fixed;
  inset: 0;
  z-index: 1000;
  justify-content: center;
  align-items: center;
  background: rgba(0,0,0,0.4);
}

#reader-wrapper {
  background: white;
  border-radius: 12px;
  padding: 1rem;
  width: 90vw;
  max-width: 340px;
  aspect-ratio: 1 / 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

#reader {
  width: 100%;
  height: 100%;
}

#confirmationModal {
  display: none;
  position: fixed;
  inset: 0;
  background: #00000080;
  z-index: 100;
  justify-content: center;
  align-items: center;
}

#confirmationModal > div {
  background: white;
  padding: 1.3rem 1rem;
  border-radius: 12px;
  max-width: 95vw;
  width: 320px;
  box-shadow: var(--shadow);
}

#confirmationModal h2 {
  color: var(--primary);
  font-size: 1.1rem;
  margin-top: 0;
}

#confirmationModal p {
  font-size: 1rem;
  color: #333;
}

#confirmationModal .btn {
  margin-top: 8px;
  width: 100%;
}

#toast-container {
  display: none;
  position: fixed;
  z-index: 105;
  height: 60px;
  width: 90vw;
  max-width: 340px;
  bottom: 20px;
  left: 5vw;
  border-radius: 14px;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  box-shadow: var(--shadow);
}

#toast-close {
  position: absolute;
  right: 6px;
  top: 6px;
}

.toast {
  padding: 16px 10px;
  display: flex;
  align-items: center;
  gap: 20px;
}

.toast-message {
  word-break: break-word;
  font-size: 1rem;
}

  </style>
</head>

<body>
  <div class="sidebar">
    <div class="sidebar-header">
      <h2>User Dashboard</h2>
      <div id="cancelSidebar-button">
        <img src="/images/close.svg" style="height: 45px; cursor: pointer;" alt="close">


      </div>
    </div>

    <a href="/user">Dashboard</a>
    <a href="/auth/logout">Logout</a>
    <a href="/user/token-history">Token History</a>
  </div>

  <div class="main-content">
    <div class="nav">
      <div id="ham">
        <svg width="30" height="30" viewBox="0 0 100 80" fill="#2c3e50" xmlns="http://www.w3.org/2000/svg">
          <rect width="100" height="10" rx="6"></rect>
          <rect y="30" width="100" height="10" rx="6"></rect>
          <rect y="60" width="100" height="10" rx="6"></rect>
        </svg>
      </div>
      <div class="app">
        <h3>Smart Queue Management</h3>
        <a href="/user"><img src="/images/home.svg" style="height: 45px;" alt="home"></a>
      </div>
    </div>
    <h1>Book a Token</h1>
    <!-- QR Section -->
    <div class="qr-section">
      <h2>Scan QR Code at Store</h2>
      <p>If you're at the store, scan the QR code displayed there using the app or your camera to book a token
        instantly.
      </p>

      <button class="btn btn-primary" onclick="startScanner()">ðŸ“· Scan QR Code</button>
      <div id="scanner-container">
        <div id="reader-wrapper">
          <div id="reader"></div>
        </div>
        <button class="btn btn-danger mt-2" onclick="stopScanner()">Close Scanner</button>
      </div>
    </div>

    <h2>OR</h2>
    <!-- Search by store section -->
    <div class="search-bar">
      <h2>Search Store Name to Book Token</h2>
      <input type="text" id="searchInput" placeholder="Search by store name..." onkeyup="filterStores()" />
    </div>

    <div class="store-list" id="storeList">
      <% stores.forEach(store=> { %>
        <div class="store-card">
          <h3>
            <%= store.name %>
          </h3>
          <p><strong>Address:</strong>
            <%= store.address || 'N/A' %>
          </p>
          <p><strong>Contact:</strong>
            <%= store.contact || 'N/A' %>
          </p>

          <!-- <input type="hidden" name="storeId" value="<%= store._id %>" /> -->
          <!-- <button type="submit" class="btn">Book Token</button> -->
          <button class="btn" onclick="confirmBooking('<%= store._id %>')">Book Token</button>



          <div id="confirmationModal"
            style="display:none; position:fixed; inset:0; background:#00000080; z-index:100;  justify-content:center; align-items:center;">
            <div style="background:white; padding:2rem; border-radius:8px; max-width:400px;">
              <h2>Confirm Booking</h2>
              <p><strong>Store:</strong> <span id="storeName"></span></p>
              <p><strong>Address:</strong> <span id="storeAddress"></span></p>
              <p><strong>Contact:</strong> <span id="storeContact"></span></p>
              <form id="confirmForm" method="POST" action="/user/generate-token">
                <input type="hidden" name="storeId" id="confirmStoreId" />
                <button type="submit" class="btn">Confirm</button>
                <button type="button" class="btn" onclick="closeModal()">Cancel</button>
              </form>
            </div>
          </div>
        </div>
        <% }); %>
    </div>
  </div>

  <div id="toast-container"></div>


  <script src="https://unpkg.com/html5-qrcode"></script>
  <script>

    //***********************************

    const sidebar = document.querySelector(".sidebar");
    document.getElementById("ham").addEventListener("click", () => {
      console.log("hamburger button clicked");
      sidebar.style.left = 0;

    })
    document.getElementById("cancelSidebar-button").addEventListener("click", () => {
      sidebar.style.left = "-100%";
    })


    //***********************************


    function filterStores() {
      const input = document.getElementById('searchInput').value.toLowerCase();
      const cards = document.querySelectorAll('.store-card');
      cards.forEach(card => {
        const name = card.querySelector('h3').innerText.toLowerCase();
        card.style.display = name.includes(input) ? '' : 'none';
      });
    }

    async function confirmBooking(storeId) {
      try {
        const response = await fetch(`/api/store/${storeId}`);
        const store = await response.json();
        //console.log("error from store Id Api ,",   store);

        document.getElementById("storeName").textContent = store.name;
        document.getElementById("storeAddress").textContent = store.address || "N/A";
        document.getElementById("storeContact").textContent = store.contact || "N/A";

        document.getElementById("confirmStoreId").value = storeId;
        document.getElementById("confirmationModal").style.display = "flex";
      } catch (err) {
        alert("Failed to fetch store details.");
        console.error(err);
      }
    }
    function closeModal() {
      document.getElementById("confirmationModal").style.display = "none";
    }

    function handleScanSuccess(text) {
      const url = new URL(text);
      const storeId = url.searchParams.get("q");
      if (!storeId) {
        console.log("Invalid Store or Store Not found");
        showToast("Invalid Store or Store Not found",0);
        return;
      }
      confirmBooking(storeId);
     
    }

    let scanner;
    function startScanner() {
      document.getElementById("scanner-container").style.display = "flex";
      scanner = new Html5Qrcode("reader");
      scanner.start(
        { facingMode: "environment" },
        { fps: 10, qrbox: 400 },
        (decodedText, decodedResult) => {
          console.log("Scanned", decodedText, "decoded Result", decodedResult);
          handleScanSuccess(decodedText);
          stopScanner();
        },
        (error) => {
          console.warn("QR scan error", error);
        }
      ).catch(error => {
        alert("Camera permission denied or error: " + error);
      });

    }
    function stopScanner() {
      if (scanner) {
        scanner.stop().then(() => {
          scanner.clear();
          document.getElementById("scanner-container").style.display = "none";
        }).catch(errr => {
          console.log("error", errr);
        });
      }
    }

    // toast part
    function showToast(message , type){
        const toast_container=document.getElementById("toast-container");
        if(type==1) toast_container.style.background="rgb(21 255 151)";
        else if(type==0) toast_container.style.background="rgb(255 89 82)";
        else toast_container.style.background="rgb(247 219 76)";
        toast_container.innerHTML=`<div id="toast-close" style="cursor:pointer; "  onclick="closeToast()" >
            <img style="filter: invert(1); height: 20px;" src="/images/close.svg">
        </div>
        <div class="toast">
            <div class="toast-icon">X

            </div>
            <div class="toast-message">
                ${message}
            </div>
        </div>`;
        toast_container.style.display="inline-block";
        setTimeout(()=>{
            toast_container.style.display="none";
        } , 4000)
        
    }
    function closeToast(){
        document.getElementById("toast-container").style.display="none";
    }

    //toast part


  </script>
</body>

</html>
